@model Lalit_Pant_Dot_Net_Assignment.Models.Donor

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary">Register As A Donor</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6 p-4 shadow rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BloodType" class="form-label fw-bold"></label>
                <select asp-for="BloodType" class="form-control">
                    <option value="">-- Select Blood Group --</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contact" class="form-label fw-bold"></label>
                <input asp-for="Contact" class="form-control" placeholder="Enter contact number" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastDonationDate" class="form-label fw-bold"></label>
                <input asp-for="LastDonationDate" type="date" class="form-control" />
                <span asp-validation-for="LastDonationDate" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                @* <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a> *@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
