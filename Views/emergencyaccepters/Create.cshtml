@model Lalit_Pant_Dot_Net_Assignment.Models.emergencyaccepter

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-primary">Create Emergency Request</h1>
<h4 class="text-secondary">Fill Form Carefully</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6 p-4 shadow rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="PatientName" class="form-label fw-bold"></label>
                <input asp-for="PatientName" class="form-control" placeholder="Enter patient's full name" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>



            <div class="form-group mb-3">
                <label asp-for="BloodTypeRequired" class="form-label fw-bold"></label>
                <select asp-for="BloodTypeRequired" class="form-control">
                    <option value="">-- Select Blood Type --</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
                <span asp-validation-for="BloodTypeRequired" class="text-danger"></span>
            </div>



            @* <div class="form-group mb-3"> *@
            @*     <label asp-for="BloodTypeRequired" class="form-label fw-bold"></label> *@
            @*     <input asp-for="BloodTypeRequired" class="form-control" placeholder="Enter required blood type" /> *@
            @*     <span asp-validation-for="BloodTypeRequired" class="text-danger"></span> *@
            @* </div> *@

            <div class="form-group mb-3">
                <label asp-for="Quantity" class="form-label fw-bold"></label>
                <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity (units)" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RequestDate" class="form-label fw-bold"></label>
                <input asp-for="RequestDate" type="date" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contact" class="form-label fw-bold"></label>
                <input asp-for="Contact" class="form-control" type="text" placeholder="Enter contact number" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                @* <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a> *@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
